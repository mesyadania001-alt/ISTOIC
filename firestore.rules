rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Fungsi Helper
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Aturan untuk Koleksi Users
    match /users/{userId} {
      // Baca: Hanya pemilik akun
      allow read: if isAuthenticated() && isOwner(userId);
      
      // Buat: Authenticated user bisa membuat profil mereka sendiri
      allow create: if isAuthenticated() && isOwner(userId);
      
      // Update: Pemilik akun, dengan validasi field
      allow update: if isAuthenticated() && isOwner(userId) 
        && request.resource.data.uid == userId // UID tidak boleh berubah
        && request.resource.data.email == resource.data.email; // Email tidak boleh berubah
        
        // Catatan: Logika limitasi waktu 2x sebulan sebaiknya divalidasi juga di sini 
        // jika ingin sangat ketat, atau gunakan Cloud Functions untuk 'gatekeeping'.
        // Untuk MVP ini, validasi di client + aturan dasar kepemilikan sudah aman dari akses orang lain.
    }
    
    // Deny all others by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}